#!/usr/bin/env bash
set -euo pipefail

# sempre rodar a partir da raiz do projeto
cd "$(dirname "$0")"

# verificaÃ§Ãµes rÃ¡pidas
command -v mvn >/dev/null 2>&1 || { echo "âŒ Maven (mvn) nÃ£o encontrado no PATH"; exit 1; }
command -v java >/dev/null 2>&1 || { echo "âŒ Java (JDK) nÃ£o encontrado no PATH"; exit 1; }

# porta opcional: ./run 9090  (ou use env PORT=9090)
PORT_SYS_PROP=""
if [[ $# -gt 0 ]]; then
  PORT_SYS_PROP="-DPORT=$1"
fi

echo "â–¶ï¸  Build (Maven)..."
mvn -q -DskipTests clean package

# pega o JAR mais recente dentro de target/
JAR="$(ls -t target/*.jar 2>/dev/null | head -n 1 || true)"
if [[ -z "${JAR}" ]]; then
  echo "âŒ Nenhum JAR encontrado em target/. Verifique o build."
  exit 1
fi

echo "ğŸš€ Executando: java ${PORT_SYS_PROP:+$PORT_SYS_PROP }-jar $JAR"
exec java ${PORT_SYS_PROP} -jar "$JAR"
